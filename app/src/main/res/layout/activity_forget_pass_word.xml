<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ForgetPassWordActivity">
<com.zheng.liuju.view.TitleView
    android:id="@+id/titleView"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:titleText="@string/retrievePassword"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--手机号忘记密码-->
    <LinearLayout
        android:id="@+id/phone"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:visibility="invisible"
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="*"
                android:gravity="center"
                android:textColor="@color/loginbaks"/>
            <TextView
                android:id="@+id/quhao"
                android:layout_marginLeft="5dp"
                android:visibility="invisible"
                android:paddingLeft="95px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phoneNumber"
                android:textSize="@dimen/loginTextSiz"
                android:textColor="@color/loginTextHint"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/quhaos"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+966"
                android:textSize="17sp"
                android:textColor="@color/loginTextColors"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <EditText
               android:layout_centerVertical="true"
                android:theme="@style/CustomAppTheme_textInputLayout"
                android:id="@+id/username"
                android:layout_toLeftOf="@id/phones"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:digits="0123456789"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/loginTextSiz"
                android:textColorHint="@color/loginTextHint"
                android:background="@null"
                android:hint="@string/phoneNumber"
                />
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_marginTop="35dp"
                android:id="@+id/phones"
                android:layout_alignParentRight="true"

                android:layout_width="50dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:clickable="false"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/mailbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
</RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/phoneview"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3DFEF"/>


    </LinearLayout>

        <!--邮箱忘记密码-->

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/eamil"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--     <TextView
                     android:id="@+id/quhao"
                     android:visibility="invisible"
                     android:paddingLeft="95px"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/phoneNumber"
                     android:textSize="@dimen/loginTextSiz"
                     android:textColor="@color/loginTextHint"
                     />-->
            <RelativeLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_toLeftOf="@id/mailbox"
                    android:id="@+id/mailboxs"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:theme="@style/CustomAppTheme_textInputLayout"
                    app:hintTextAppearance="@style/TextLabel"
                    android:layout_height="wrap_content">

                    <EditText
                        android:paddingTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/mailbox"
                        android:theme="@style/CustomAppTheme_textInputLayout"
                        android:id="@+id/email"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/loginTextSiz"
                        android:textColorHint="@color/loginTextHint"
                        android:background="@null"
                        android:hint="@string/mailboxs"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <RelativeLayout
                    android:layout_marginTop="35dp"
                    android:id="@+id/mailbox"
                    android:layout_alignParentRight="true"

                    android:layout_width="50dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:clickable="false"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/phones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:id="@+id/phoneviews"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3DFEF"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:id="@+id/codepoint"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="*"
            android:gravity="center"
            android:textColor="@color/loginbaks"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="230dp"
            android:theme="@style/CustomAppTheme_textInputLayout"
            app:hintTextAppearance="@style/TextLabel"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/code"
                android:paddingTop="10dp"
                android:textColorHint="@color/loginTextHint"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="@dimen/loginTextSiz"
                android:hint="@string/codes"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView

                android:layout_alignParentRight="true"
                android:id="@+id/obtainCode"
                android:layout_width="100dp"
                android:layout_centerVertical="true"
                android:layout_height="30dp"
                android:textSize="10sp"
                android:background="@drawable/registered_button_bg"
                android:text="@string/sendYzCode"
                android:textColor="@color/white"
                android:gravity="center">

            </TextView>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/codeview"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3DFEF"/>
    <LinearLayout

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:id="@+id/passwordpoint"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="*"
            android:gravity="center"
            android:textColor="@color/loginbaks"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="250dp"
            android:theme="@style/CustomAppTheme_textInputLayout"
            app:hintTextAppearance="@style/TextLabel"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="textPassword"
                android:id="@+id/password"
                android:paddingTop="10dp"
                android:textColorHint="@color/loginTextHint"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="@dimen/loginTextSiz"
                android:hint="@string/password"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:id="@+id/mingwens"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/mingwen"
                android:src="@mipmap/mingwen"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <View
       android:id="@+id/passwordview"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3DFEF"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.gigamole.library.ShadowLayout
                app:sl_shadowed="true"
                app:sl_shadow_angle="45"
                app:sl_shadow_radius="5dp"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_color="@color/loginbakbutton"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="14dp"
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="@string/determine"
                    android:gravity="center"
                    android:background="@drawable/login_buttons"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btnTextSiz"/>
            </com.gigamole.library.ShadowLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>