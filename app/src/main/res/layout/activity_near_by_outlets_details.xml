<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NearByOutletsDetailsActivity">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zheng.liuju.banner.Banner
        android:id="@+id/banner"
        app:image_scale_type="fit_xy"
        android:layout_width="match_parent"
        android:layout_height="260dp"
       app:banner_default_image="@mipmap/error"
        app:indicator_height="10dp"
        app:indicator_width="10dp"
        app:indicator_selected_height="10dp"
        app:indicator_selected_width="10dp"
      >
    </com.zheng.liuju.banner.Banner>


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/backs"
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/whiteback"/>
        </LinearLayout>
        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/shopDetail"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout

        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:background="@drawable/shop_details_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="45dp"
            android:textColor="#333333"/>



        <androidx.cardview.widget.CardView
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            app:cardCornerRadius="13dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="21dp"
                    android:id="@+id/shoptime"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shoptime"/>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/shoptime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/openingHours"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/time"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="14sp"
                        android:textColor="#616161 "/>
                </LinearLayout>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            app:cardCornerRadius="13dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="21dp"
                    android:id="@+id/address"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/address"/>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/addres"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#616161 "/>
                </LinearLayout>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            app:cardCornerRadius="13dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="21dp"
                    android:id="@+id/phone"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/phone"/>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/tel"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="14sp"
                        android:textColor="#616161 "/>
                </LinearLayout>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="13dp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            app:cardCornerRadius="13dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="21dp"
                    android:id="@+id/description"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/description"/>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/merchantDescription"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/content"
                        android:ellipsize="end"
                        android:maxLines="3"
                         android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#616161 "/>
                </LinearLayout>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
</LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        fresco:roundingBorderColor="@color/white"
        fresco:roundingBorderWidth="3dp"
        fresco:placeholderImage="@mipmap/avatar"
        fresco:roundAsCircle="true"/>
</RelativeLayout>
    </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="52dp"
        android:layout_height="52dp">
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/navigation_crcle"/>
    <RelativeLayout
        android:id="@+id/go"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/gray_radius">
        <LinearLayout
          android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<ImageView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/navigation"
    android:src="@mipmap/go"
    android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/distance"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    </FrameLayout>
</RelativeLayout>