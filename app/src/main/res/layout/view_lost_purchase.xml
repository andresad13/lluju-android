<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/customer_service">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/dismiss"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dismiss"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/content"
            android:layout_below="@id/dismiss"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/lost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/LostTips"/>
            <TextView
                android:gravity="center"
                android:id="@+id/phone"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LostTip"
                />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/content"
            android:layout_marginTop="23dp"
            android:layout_width="116dp"
            android:layout_height="36dp"
            app:cardBackgroundColor="#63B15E"
            app:cardCornerRadius="18dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/buy"
                android:gravity="center"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>