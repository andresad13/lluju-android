<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RechargeActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.zheng.liuju.view.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/Recharge" />
    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="134dp"
      />
  <TextView
      android:id="@+id/rechargeTip"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="30dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:textSize="16sp"
      android:textColor="#424242"/>
    <GridView
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/gv"
        android:numColumns="2"
        android:horizontalSpacing="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="#0000">

    </GridView>
    <TextView

        android:id="@+id/payTip"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/payTypeTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginRight="20dp"
        android:textColor="#111111"/>
    <!--<RelativeLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
     <ImageView
         android:layout_centerVertical="true"
         android:id="@+id/visa"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/visa"/>
        <ImageView
            android:layout_centerVertical="true"
          android:layout_toRightOf="@id/visa"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/master"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#111111"
        android:text="@string/payType"
        android:layout_centerInParent="true"/>
       <CheckBox
           android:layout_centerVertical="true"
           style="@style/CustomCheckBoxTheme"
           android:layout_alignParentRight="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:checked="true"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E5E5E5"/>-->
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <RelativeLayout

        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation"
        android:layout_marginBottom="5dp">
        <ListView

            android:scrollbars="none"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:id="@+id/cardList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

    </RelativeLayout>

        <LinearLayout
            android:id="@+id/navigation"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E5E5E5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/total"
                    android:layout_marginLeft="25dp"
                    android:text="@string/total"
                    android:textColor="#111111"
                    android:textSize="@dimen/loginTextSiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/money"
                    android:layout_centerVertical="true"
                  android:layout_toRightOf="@id/total"
                    android:textColor="#111111"
                    android:layout_marginLeft="3dp"
                    android:textSize="@dimen/loginTextSiz"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/recharge"
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="@string/Recharge"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="#64B15E"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
    <com.zheng.liuju.view.DragImageView
        android:id="@+id/home"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home"/>
</RelativeLayout>