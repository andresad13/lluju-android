<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChargingRulesActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <com.zheng.liuju.view.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/rules">
    </com.zheng.liuju.view.TitleView>

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_width="match_parent"
        android:background="@drawable/rules_bg"

        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="21dp"
            android:layout_marginLeft="16dp"
            android:text="@string/billingRules"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            />
        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="13sp"
                android:textColor="#525252"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Deposits"/>

            <TextView
                android:id="@+id/deposit"
                android:textSize="13sp"
                android:textColor="#525252"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="13sp"
                android:textColor="#525252"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FreeDurations"/>

            <TextView
                android:id="@+id/freeDurations"
                android:textSize="13sp"
                android:textColor="#525252"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="13sp"
                android:textColor="#525252"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perHour"/>

            <TextView
                android:id="@+id/prices"
                android:textSize="13sp"
                android:textColor="#525252"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="13sp"
                android:textColor="#525252"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dayCap"/>

            <TextView
                android:id="@+id/dayCap"
                android:textSize="13sp"
                android:textColor="#525252"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="13sp"
                android:textColor="#525252"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TotalCap"/>

            <TextView
                android:id="@+id/totalCap"
                android:textSize="13sp"
                android:textColor="#525252"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="13sp"
                android:textColor="#525252"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/EndOrder"/>


        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="#525252"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RefundOfDeposit"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/down"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OFF"/>
            </FrameLayout>
        </RelativeLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/price"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="#525252"
            android:lineSpacingExtra="5dp"
            android:textSize="13sp"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/zujiesm"
            android:layout_marginRight="15dp"
            android:textSize="13sp"
            android:textColor="#525252"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.gigamole.library.ShadowLayout
                android:id="@+id/rentimmediately"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sl_shadowed="true"
                app:sl_shadow_angle="45"
                app:sl_shadow_radius="5dp"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_color="@color/loginbakbutton"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                >

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="@string/rentImmediately"
                    android:background="@drawable/login_buttons"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btnTextSiz"/>
            </com.gigamole.library.ShadowLayout>

        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
    <com.zheng.liuju.view.DragImageView
        android:id="@+id/home"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home"/>
</RelativeLayout>