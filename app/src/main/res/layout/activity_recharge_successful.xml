<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.RechargeSuccessfulActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <com.zheng.liuju.view.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:titleText="@string/RechargeSuccessful"/>
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/successful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/successful"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/recharge"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RechargeSuccessful"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/time"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#666666"
            android:textSize="14sp"/>
<!--        <androidx.cardview.widget.CardView
            android:id="@+id/order"
            android:layout_marginTop="80dp"
            android:layout_width="230dp"
            android:layout_height="46dp"
            app:cardCornerRadius="23dp"
            app:cardBackgroundColor="@color/loginbak"
            android:layout_gravity="center_horizontal">-->
            <TextView
                android:layout_marginTop="80dp"
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="45dp"
                android:text="@string/BillingDetails"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/login_buttons"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
      <!--  </androidx.cardview.widget.CardView>-->
    </LinearLayout>
    </LinearLayout>

    <com.zheng.liuju.view.DragImageView
        android:id="@+id/home"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home"/>
</RelativeLayout>